pipeline {
  agent any
	tools {
    maven 'M2_HOME'
  }
  stages {
    stage('Setup parameters') {
      steps {
        script {
          properties([
            parameters([
              choice(
                choices: ['dev', 'qa'],
                name: 'Environment',
                description: 'Which environment?.'
              ),
              string(
                defaultValue: '1',
                name: 'Machine IP',
                description: 'machine ip where test will be executed.',
                trim: true
              )
            ])
          ])
        }
      }
    }

    stage('clone performance repo') {
      steps {
        script {
					sh "rm -rf gatling-fw"
          sh "git clone https://github.com/jitendrakumarr/gatling-fw.git"
					sh "pwd"
        }
      }
    }

    stage('goto dir and install dependancy') {
      steps {
        script {
          dir("gatling-fw") {
    			sh "pwd"
					}
          sh "mvn -X install"
        }
      }
    }

    stage('start execution') {
      steps {
        script {
          sh "mvn -X gatling:test -Dgatling.simulationClass=com.zepto.simulations.FirstSimulation"
        }
      }
    }

    stage('reporting') {
      steps {
        script {
           if (params.Environment == 'qa') {
            sh "echo test"
          }
        }
      }
    }

  }
}